{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/src/$1"
  },
  "rootDir": "../",
  "testMatch": [
    "<rootDir>/test/unit/**/*.spec.ts"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "setupFilesAfterEnv": [
    "<rootDir>/test/test.setup.ts"
  ],
  "resetMocks": true,
  "restoreMocks": true
}
